<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jeremy.androidscoutingapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.jeremy.androidscoutingapp.AndroidScoutingApp"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.jeremy.androidscoutingapp.EnterRobot" />
        <activity android:name="com.example.jeremy.androidscoutingapp.ViewRobot" />
        <activity
            android:name="com.example.jeremy.androidscoutingapp.DataListActivity"
            android:label="@string/title_activity_data_list"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest><!--
        with android manifest, you seemingly create a class hierarchy within the application
        As represented below, where the activities are created.
-->
